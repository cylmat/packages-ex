{
    "name": "cyril/packages",
    "description": "Essai sur differents packages, micro-frameworks et extensions php",
    "minimum-stability": "stable",
    "type": "project",
    "authors": [
        {
            "name": "freeonisland",
            "email": "freeonisland@yahoo.fr"
        }
    ],
    "config": {
        "sort-packages": false
    },
    "require": {
        "bcosca/fatfree": "^3.7",
        "mikecao/flight": "^1",
        "laravel/lumen-framework": "^7.0",
        "slim/slim": "^4.4",
        
        "adldap2/adldap2": "^10.2",
        "directorytree/ldaprecord": "^1.2",
        "laminas/laminas-ldap": "^2.10",
        
        "league/oauth2-client": "^2",
        "league/oauth2-google": "^3.0",
        "league/oauth2-server": "^8",
        "socialconnect/auth": "^3.1",
        "socialconnect/http-client": "^1.0",
        
        "aws/aws-sdk-php": "^3.1",
        "guzzlehttp/guzzle": "^6.5",
        "monolog/monolog": "^2",
        "paragonie/cookie": "^3.2",
        "php-di/php-di": "^6.0",
        "symfony/yaml": "^5.0"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "friendsofphp/php-cs-fixer": "^2",
        "fzaninotto/faker": "^1",
        "kint-php/kint": "^3",
        "mockery/mockery": "^1",
        "nelmio/alice": "^3.6",
        "phing/phing": "^2",
        "phpmd/phpmd": "^2.8",
        "phpspec/phpspec": "^6.0",
        "phpunit/phpunit": "^8.5",
        "slevomat/coding-standard": "^5.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "analyse": "phpstan analyse --level max src",
        "cs": "phpcs -p src",
        "check": "@cs",
        "fix": "phpcbf -v src",
        "md": "phpmd src text cleancode, codesize, controversial, design, naming, unusedcode",
        "insights": "phpinsights"
    },
    "autoload" : {
        "psr-4": {
            "": "src/"
        }
    },
    "extra": {
        "consolidation/robo": "*",
        "phpunit/phpunit-skeleton-generator": "*",
        "laminas/laminas-permissions-acl": "2.7"
    }
}
